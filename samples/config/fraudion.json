	"general": {

	},

	"softswitch": {
    "type": "*asterisk",
		"version": "1.8",
		"cdrs_source_name": "sourceName2",
  },

	"cdrs_sources": {

		"sourceName": {
			"type": "*database",
			"dbms": "*mysql",
			"user_name": "root",
			"user_password": "dadada",
			"database_name": "asteriskcdrdb",
			"table_name": "cdr",
		},

		"sourceName2": {
			"type": "*database",
			"dbms": "*mysql",
			"user_name": "root",
			"user_password": "dadada",
			"database_name": "asteriskcdrdb",
			"table_name": "cdr",
		},

		// etc...

	},

	"monitors": {

    "simultaneous_calls": {
      "enabled": true,
      "execute_interval": "5m",
			"hit_threshold": 10,
      "minimum_number_length": 5,
      "action_chain_name": "*default",
    },

    "dangerous_destinations": {
      "enabled": true,
      "execute_interval": "1m",
      "hit_threshold": 10,
      "minimum_number_length": 5,
      "action_chain_name": "*default",

			"consider_cdrs_from_last": "600",
      "prefix_list": ["351", "244", "91", "53", "256", "48"],
      "match_regex": "([0-9]{0,8})?(0{2})?__prefix__[0-9]{5,}",
      "ignore_regex": "^[0-9]{9}$"
		},

    "expected_destinations": {
      "enabled": true,
      "execute_interval": "5m",
      "hit_threshold": 5,
      "minimum_number_length": 10,
      "action_chain_name": "*default",

			"consider_cdrs_from_last": "5",
      "prefix_list": ["244"],
      "match_regex": "([0-9]{0,8})?(0{2})?__prefix__[0-9]{5,}",
      "ignore_regex": "^[0-9]{9}$"
    },

    "small_duration_calls": {
      "enabled": true,
      "execute_interval": "5m",
      "hit_threshold": 5,
      "minimum_number_length": 5,
      "action_chain_name": "*default",

			"consider_cdrs_from_last": "5",
      "duration_threshold": "5s"
    }

  },

	"actions": {

    "email": {
      "enabled": true,
			"recurrent": true,
			"type": "*gmail",
      "username": "username@domain",
      "password": "password",
			"title": "An E-mail",
      "body": "This is a message, we support some __tags__ that we replace with information."
    },

    "local_commands": {
      "enabled": true,
			"recurrent": false,
    }

  },

	"action_chains": {

      "*default": [
        {
          "action_name": "*email",
          "data_groups": ["DataGroupName", "DataGroup2Name"]
        },
        {
          "action_name": "*local_commands",
          "data_groups": ["DataGroupName"]
        },

				// etc...

      ],

      "OneRandomName": [
        {
          "action_name": "*local_commands",
          "data_groups": ["DataGroupName", "DataGroup2Name"]
        }

				// etc...

      ],

			// etc...

  },

